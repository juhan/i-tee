<h3>Listing labs</h3>
<div id="index_t">
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Short description</th>
        <th>Host</th>
        <th></th>
      </tr>
    </thead>
    <% @labs.each do |lab| %>
      <tr>
        <td><%= lab.name %></td>
        <td class="marked"><%= lab.short_description %></td>
        <td><%= lab.host.name if lab.host %></td>
        <td><%= link_to 'View', lab,:class=> 'show-button button' %><%= link_to 'Edit info', edit_lab_path(lab) ,:class=> 'edit-button button'%><%= link_to 'Destroy', lab, :confirm => 'Are you sure?', :method => :delete,:class=> 'delete-button button' %></td>
      </tr>
    <% end %>
  </table>
   <%= will_paginate @labs %><div class="page_info"><%= page_entries_info @labs %></div>
</div>
<br/>
<%= link_to 'New lab', new_lab_path, :class=>"add-button button"  %>