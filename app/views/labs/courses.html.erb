<%if @labs!=[] then%>

<% content_for :sidebar do %> 
  <% @labs.each do |lab| %>
    <% classes="" #default
       classes="started" if @started.include?(lab)
       classes="ended" if @complete.include?(lab)
       classes= "bold "+classes if lab.id==@lab.id %>
      <li class="<%= classes %>">
      <%= link_to(lab.name, :controller=>'labs', :action=>'courses', :id=>lab.id)%>
    </li>
  <% end %>
<%end%>  

<% content_for :sidebar_head do %>
  All labs
<%end%>


<h1><%=@lab.name %></h1>
<div class="marked">
  <%=link_M @lab.description %>
</div>
<p>
  <%if @labs!=[] then%>
    <%title="Start lab"%>
    <%path=running_labs_path%>
    <%clas="add-button button"%>
    
    <% if @started.include?(@lab) %>
      <% title='Continue lab' %>
      <%clas="submit-button button"%>
    <%end%>
 
    <% if @complete.include?(@lab) then%>
      <% title='View lab'  %>
      <% path=completed_labs_path%>
      <%clas="show-button button"%>
    <%end%>
  
    <%= link_to(title, path+"/"+@lab.id.to_s, :class=>clas) %>
    <%if title!='Start lab' then%>
      <%#if the lab is started or completed, one can reset it anytime%>
      <%= link_to('Restart lab',restart_lab_path+"/"+@lab.id.to_s, :class=>'add-button button', :confirm => "This will delete all saved data. Are you sure?")%>
    <%end%>
  <%end%>
  <%else%>
    <h3>Sorry, you dont have any assigned labs.</h3>
  <%end%>
</p>

