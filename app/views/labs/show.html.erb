<% content_for :sidebar_head do %>
  Labs
<% end %>


<% content_for :sidebar do %>
    <li><%= link_to 'Edit', edit_lab_path(@lab) %></li>
    <li><%= link_to 'Back', labs_path %></li>
<% end %>

<% content_for :body do %>
<div class="text-box round">

<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @lab.name %>
</p>

<p>
  <b>Description:</b>
  <%=raw @lab.description %>
</p>
<br/>
<h3>materials</h3>
<%  @lab.lab_materials.sort! { |a,b| a.sort <=> b.sort }
%>
<% @lab.lab_materials.each do |material| %>
  <p><%=material.sort%>.
  <%=link_to(material.material.name, :controller=>'materials', :action=>'show', :id=>material.material, :lab=>@lab)%>
  
 <%# link_to("remove",material, :method=>:delete)%>
</p> 
<%end%>
<p><%=link_to 'Add materials', :controller=>'lab_materials', :action=>'new', :lab=>@lab %></p>
</div>
<%end%>