<% content_for :body do %>
<div class="head">Listing VMTs in labs</div>
 <div class="hr"></div>
 <div class="text-box">
  <p id="notice"><%= notice %></p>
    <div id="content-table">
<table>
   <caption >Templates in labs (<%= @lab_vmts.count  %>)</caption>
  <thead>
    <tr>
    <th>Name</th>
    <th><%=link_to("Lab", :controller=>"lab_vmts",:action=>"index", :sort_by=>"lab_id")%></th>
    <th><%=link_to("Vmt", :controller=>"lab_vmts",:action=>"index", :sort_by=>"vmt_id")%></th>
    <th></th>
   
  </tr>
</thead>

<% @lab_vmts.each do |lab_vmt| %>
  <tr>
    <td><%= lab_vmt.name %></td>
    <td><%= lab_vmt.lab.name %></td>
    <td><%= lab_vmt.vmt.image %></td>
    <td><%= link_to 'Edit', edit_lab_vmt_path(lab_vmt),:class=> 'edit-button button' %><%= link_to 'Destroy', lab_vmt, :confirm => 'Are you sure?', :method => :delete ,:class=> 'delete-button button'%></td>
  </tr>
<% end %>
</table>

</div>
<%= form_for(@lab_vmt) do |f| %>
<table>
<tr>
<td>  <%= f.text_field :name %></td>
<td>
<%=collection_select(:lab_vmt, :lab_id, Lab.all, :id, :name)%>
</td>
<td>
<%=collection_select(:lab_vmt, :vmt_id, Vmt.all, :id, :image)%>
</td>
<td><%= f.submit "Add"%> </td>
</tr>
</table>
<%end%>
</div>
<%end%>
<% content_for :sidebar_head do %>
VMT in labs
  <%end%>
<% content_for :sidebar do %>
<li><%# link_to 'Add VMT to lab', new_lab_vmt_path %></li>

<%end%>
