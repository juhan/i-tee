<p><%alphabet=[]%>
<%('a'..'z').each do |l|%>
  <%alphabet<<l%>
  <a href="#" onclick="$('.token_li').hide(); $('.letter_<%=l%>').show();"><%=l.upcase%></a> 
<%end%>
<a href="#" onclick="$('.token_li').hide(); $('.letter_').show();">other</a> 
<a href="#" onclick="$('.token_li').show();">all</a>
</p>
<ul class="no-bullet">
<%@users.each do |u|%>
<li class="token_li letter_<%=u.username[0,1] if alphabet.include? u.username[0,1]%>">
  <%=u.username%>- <% host=request.host
        host=host+":3000" if host=="localhost" %>
	  <%=u.authentication_token.blank? ? "No token" : link_to("#{host}#{root_path(:auth_token => u.authentication_token)}", root_path(:auth_token => u.authentication_token)) %></p>
	  <%= link_to "Generate", token_authentications_path(:user_id => u.id), :class=>'button add-button', :method => :post, :confirm => "Are you sure?"  %><%= link_to "Delete", token_authentication_path(:id => u.id),:class=>'button delete-button', :method => :delete, :confirm => "Are you sure?" if !u.authentication_token.blank? %>
</li>
<%end%>