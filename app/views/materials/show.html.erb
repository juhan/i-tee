<% content_for :sidebar_head do %>
  Materials
<% end %>


<% content_for :sidebar do %>
 <% if @admin then %>
  <%# links for admins %>
  <li><%= link_to 'Edit', edit_material_path(@material) %></li>
    <li><%= link_to 'Back to materials', materials_path %></li>
   
    <%if params[:lab] != nil%>
      <li><%=link_to('Back to lab', :controller=>'labs', :action=>'show', :id=>params[:lab]) %></li>
    <%end%>
    
  <%end%>
  <%# links for normal users %>
