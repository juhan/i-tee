<h3>Listing materials</h3>
<div id="index_t">
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Source</th>
        <th></th>
      </tr>
    </thead>
    <% @materials.each do |material| %>
      <tr>
        <td><%= material.name %></td>
        <td><%=truncate(material.source, :length => 100, :separator =>"...") %></td>
        <td class="narrow">
          <%= link_to 'View', material,:class=> 'show-button button' %>
          <%= link_to 'Edit', edit_material_path(material),:class=> 'edit-button button' %>
          <%= link_to 'Destroy', material, :confirm => 'Are you sure?', :method => :delete, :class=> 'delete-button button' %>
        </td>
      </tr>
    <% end %>
  </table>
   <%= will_paginate @materials %><div class="page_info"><%= page_entries_info @materials %></div>
</div>
<br/>
<%= link_to 'New material', new_material_path, :class=>"add-button button" %>