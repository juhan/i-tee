<% content_for :body do %>
<div class="head">Listing materials</div>
 <div class="hr"></div>
 <div class="text-box">
  <p id="notice"><%= notice %></p>
    <div id="content-table">
<table>
    <caption >Materials (<%= @materials.count  %>)</caption>
  <thead>
  <tr>
    <th>Name</th>
    <th>Source</th>
    <th></th>
  </tr>
</thead>
<% @materials.each do |material| %>
  <tr>
    <td><%= material.name %></td>
    <td><%=truncate(material.source, :length => 100, :separator =>"...") %></td>
    <td><%= link_to 'Show', material,:class=> 'edit-button button' %><%= link_to 'Edit', edit_material_path(material),:class=> 'edit-button button' %><%= link_to 'Destroy', material, :confirm => 'Are you sure?', :method => :delete, :class=> 'delete-button button' %></td>
  </tr>
<% end %>
</table>
  </div>
  </div>

<% end %>
<% content_for :sidebar_head do %>
Materials
  <%end%>
<% content_for :sidebar do %>
<li><%= link_to 'New Material', new_material_path %></li>
<li><%= link_to 'Materials in labs', lab_materials_path %></li>
<%end%>
